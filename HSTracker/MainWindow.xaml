<Window x:Class="HSTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HSTracker" Width="230">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="Resources/CardTemplate.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        
        <ItemsControl x:Name="cardCollection" Grid.Row="0" HorizontalAlignment="Stretch">
        </ItemsControl>
        
        <StackPanel Grid.Row="1" Orientation="Vertical" Background="LightBlue">
            <TextBlock Padding="4,4">Stuff</TextBlock>
        </StackPanel>
    </Grid>
</Window>
