<Window x:Class="HSTracker.DeckCreation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
        Title="DeckCreation" Height="600" Width="300"
        WindowStartupLocation="CenterScreen">


    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <toolkit:AutoCompleteBox
               Loaded="searchAutoComplete_Loaded"
               KeyDown="searchAutoComplete_KeyDown"
               SelectionChanged="searchAutoComplete_SelectionChanged"
               />
        </StackPanel>
        
        <StackPanel Grid.Row="1">
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,5">
            <TextBox Text="" Width="120" Margin="5,0" />
            <Button Content="Create" Click="Create_Click" />
        </StackPanel>
    </Grid>
</Window>
